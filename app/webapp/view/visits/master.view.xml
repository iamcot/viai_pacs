<mvc:View
    controllerName="vn.viaihealth.pacs_ui.controller.Visits"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
>
    <f:DynamicPage
        id="dynamicPageId"
        toggleHeaderOnTitleClick="false"
    >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>visitsTitle}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Content -->
        <f:content>
            <VBox fitContainer="true">
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <ToolbarSpacer />
                    <SearchField
                        search=".onSearch"
                        width="17.5rem"
                    />
                    <OverflowToolbarButton
                        icon="sap-icon://add"
                        text="Add"
                        type="Transparent"
                        press=".onAdd"
                    />
                    <OverflowToolbarButton
                        icon="sap-icon://sort"
                        text="Sort"
                        type="Transparent"
                        press=".onSort"
                    />
                </OverflowToolbar>
                <Table
                    id="patientsTable"
                    inset="false"
                    items="{
						path: 'patients>/patients',
						sorter: {
							path: 'patients>name'
						}
					}"
                    class="sapFDynamicPageAlignContent sapUiSmallMarginTop"
                    width="auto"
                    fixedLayout="false"
                    popinLayout="Block"
                    alternateRowColors="true"
                >
                    <columns>
                        <Column width="15em">
                            <Text text="{i18n>patientsName}" />
                        </Column>
                        <Column
                            width="10em"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline"
                        >
                            <Text text="{i18n>patientsGender}" />
                        </Column>
                        <Column
                            width="10em"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline"
                        >
                            <Text text="{i18n>patientsAge}" />
                        </Column>
                        <Column
                            width="10em"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline"
                        >
                            <Text text="{i18n>patientsPhone}" />
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            popinDisplay="Inline"
                        >
                            <Text text="{i18n>patientsAddress}" />
                        </Column>

                        <Column
                            hAlign="End"
                            width="10em"
                        >
                            <Text text="{i18n>patientsStatus}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            type="Navigation"
                            press=".onItemPress"
                        >
                            <cells>
                                <ObjectIdentifier title="{patients>name}" />
                                <ObjectAttribute text="{patients>gender}" />
                                <ObjectAttribute text="{patients>age}" />
                                <ObjectAttribute text="{patients>phone}" />
                                <ObjectAttribute text="{patients>address}" />
                                <ObjectStatus
                                    class="sapUiSmallMarginEnd"
                                    text="{patients>status}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Accept"
                    text="Accept"
                />
                <Button
                    type="Reject"
                    text="Reject"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
